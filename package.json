{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "bash-powershell",
  "title": "PowerBash",
  "description": "Map bash and powershell commands",
  "icon": "command-icon.png",
  "author": "rustique",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "ttb",
      "title": "Translate to bash",
      "description": "Map bash and powershell command",
      "mode": "view"
    },
    {
      "name": "ttp",
      "title": "Translate to PowerShell",
      "description": "Map bash and powershell command",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.65.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}